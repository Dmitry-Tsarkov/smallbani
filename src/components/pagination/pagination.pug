//- pagination

mixin pagination(options)
  .pagination
    ul.pagination__list
      li.pagination__item.is-active
        a(href="#").pagination__link 1
      li.pagination__item
        a(href="#").pagination__link 2
      li.pagination__item
        a(href="#").pagination__link ...
      li.pagination__item
        a(href="#").pagination__link 7
      li.pagination__item
        a(href="#").pagination__link 8